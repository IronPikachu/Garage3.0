@model Garage_2._0.Models.Member

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Member?</h3>
<div>
    <hr />
   
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <input type="hidden" asp-for="SocialSecurityNumber" />

                <div class="form-group">
                <label asp-for="Name.FirstName" class="control-label"></label>
                <input asp-for="Name.FirstName" class="form-control" />
                <span asp-validation-for="Name.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="Name.LastName" class="control-label"></label>
                <input asp-for="Name.LastName" class="form-control" />
                <span asp-validation-for="Name.LastName" class="text-danger"></span>
                </div>

                    <input type="hidden" asp-for="SocialSecurityNumber" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    <a asp-action="MemberOverviewIndex" class="btn btn-primary mt-1">Cancel </a>
        </form>
    </div>
</div>

    
   
</div>
